<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:title="@string/experimental">

    <Preference
        android:icon="@drawable/ic_outline_settings_applications_accent_24"
        android:key="dev_tools"
        android:title="@string/dev_tools"
        app:persistent="false" />

    <PreferenceCategory
        android:title="@string/entities_title"
        app:allowDividerAbove="false"
        app:allowDividerBelow="false"
        app:iconSpaceReserved="false">

        <SwitchPreferenceCompat
            android:key="experimental_local_entities"
            android:title="@string/include_local_entities_setting"
            android:summary="@string/local_entity_features_summary"
            app:iconSpaceReserved="false" />

        <Preference
            android:key="entities"
            android:title="@string/entity_browser_button"
            app:iconSpaceReserved="false"
            app:persistent="false" />

    </PreferenceCategory>

</PreferenceScreen>
